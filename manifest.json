{
  "manifest_version": 2,
  "name": "APK Downloader",
  "version": "1.3.5",
  "description": "Download APK from Google Play Store (Android Market).",
  "icons": {"16": "icon_16.png", "48": "icon_48.png", "128": "icon_128.png"},
  "page_action": {
    "default_icon": "page_action.png",
    "default_title": "APK Downloader"
  },
  "options_page": "options.html",
  "background": { "scripts": ["jsxcompressor.min.js", "protocol.js", "background.js" ] },
  "content_scripts": [
    {
      "matches": [
        "*://play.google.com/store/apps/details?id=*",
        "*://play.google.com/store/apps/details?*&id=*"
      ],
      "js": ["market.js"]
    }
  ],
  "permissions": [
    "cookies",
    "https://www.google.com/accounts/ClientLogin",
    "*://android.clients.google.com/*",
    "*://*.android.clients.google.com/*"
  ]
}
